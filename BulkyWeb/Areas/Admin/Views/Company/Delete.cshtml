@model Product


<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post">
            <!-- For an Edit action, we need to pass the id as a hidden element. -->
            <!-- However, since our PK is called Id, it automatically works -->
            <input asp-for="Id" hidden />

            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <label asp-for="Title" class="ms-2"></label>
                    <input asp-for="Title" disabled class="form-control border-0 shadow" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Description" class="ms-2"></label>
                    <textarea asp-for="Description" disabled class="form-control border-0 shadow"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="ISBN" class="ms-2"></label>
                    <input asp-for="ISBN" disabled class="form-control border-0 shadow" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Author" class="ms-2"></label>
                    <input asp-for="Author" disabled class="form-control border-0 shadow" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="ListPrice" class="ms-2"></label>
                    <input asp-for="ListPrice" disabled class="form-control border-0 shadow" />
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price" class="ms-2"></label>
                    <input asp-for="Price" disabled class="form-control border-0 shadow" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price50" class="ms-2"></label>
                    <input asp-for="Price50" disabled class="form-control border-0 shadow" />
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price100" class="ms-2"></label>
                    <input asp-for="Price100" disabled class="form-control border-0 shadow" />
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
                    </div>
                </div>

            </div>

        </form>
    </div>
</div>




<!-- This is how you implement CLIENT SIDE VALIDATION -->
<!-- .Net has scripts of java script that implements it, you just need to add those scripts -->
<!-- to this section, which is the validation scripts on Views/Shared/_ValidationScriptsPartial -->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}